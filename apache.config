<VirtualHost *:80>
  ServerAdmin webmaster@localhost
  ServerName yoshiko.901farm.com

  DocumentRoot /media/data/workspace/yoshiko.901farm.kaki/public
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  <Directory /media/data/workspace/yoshiko.901farm.kaki/public>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog /var/log/apache2/error.log
  LogLevel warn
  CustomLog /var/log/apache2/access.log combined
</VirtualHost>
